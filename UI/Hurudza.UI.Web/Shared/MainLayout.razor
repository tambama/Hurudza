@inherits LayoutComponentBase
@using Hurudza.UI.Web.Cookie.Providers
@using Hurudza.UI.Web.Directives

@inject AuthenticationStateProvider AuthStateProvider

<div class="g-sidenav-show bg-gray-100">
    <NavMenu/>
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
        <NavBar/>
        
        <div class="container-fluid py-4">
            <AuthorizeView>
                <Authorized>
                    @Body
                </Authorized>
                <NotAuthorized>
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h3 class="text-danger">Access Denied</h3>
                                    <p>You need to log in to access this page.</p>
                                    <a href="authentication/login" class="btn btn-primary">Log In</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <!-- Demo of permissions in the layout -->
        <PermissionDirective Permission="@Claims.UserManage">
            <div class="position-fixed bottom-0 end-0 p-3 m-3 bg-gradient-success text-white rounded shadow-lg">
                <div class="d-flex align-items-center">
                    <i class="fa fa-shield-alt me-2"></i>
                    <span>User Management Enabled</span>
                </div>
            </div>
        </PermissionDirective>
    </main>
</div>