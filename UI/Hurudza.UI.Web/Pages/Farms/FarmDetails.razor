@page "/farms/{FarmId}"
@using Hurudza.Data.UI.Models.ViewModels.Core
@using Hurudza.UI.Web.Directives
@using Hurudza.UI.Web.Services
@using IApiCall = Hurudza.UI.Web.Api.Interfaces.IApiCall
@inject IApiCall ApiCall
@inject NavigationManager NavigationManager
@inject FarmAccessService FarmAccessService

<Toast @ref="Alert" />

@if (isLoading)
{
    <div class="d-flex justify-content-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (farm == null)
{
    <div class="alert alert-warning">
        <h5>Access Denied</h5>
        <p>You do not have permission to view this farm or the farm does not exist.</p>
        <button class="btn btn-primary" @onclick="NavigateToDashboard">Return to Dashboard</button>
    </div>
}
else
{
    <!-- Farm Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-default">
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-8">
                            <h2 class="text-white mb-0">@farm.Name</h2>
                            <p class="text-light mb-0">@farm.Address</p>
                            <div class="d-flex align-items-center mt-3">
                                <span class="badge bg-primary me-2">@farm.Size ha</span>
                                <span class="badge bg-info me-2">Region @farm.Region</span>
                                <span class="badge bg-success">@farm.SoilType</span>
                            </div>
                        </div>
                        <div class="col-md-4 d-flex justify-content-end align-items-center">
                            <!-- Only show for managers and admins -->
                            <FarmPermission FarmId="@FarmId" RequireManage="true">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-primary" @onclick="NavigateToEdit">
                                        <i class="fas fa-edit me-1"></i> Edit
                                    </button>
                                    <button type="button" class="btn btn-sm btn-info" @onclick="NavigateToUsers">
                                        <i class="fas fa-users me-1"></i> Users
                                    </button>
                                    <button type="button" class="btn btn-sm btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        More
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="javascript:void(0)" @onclick="NavigateToFields">Manage Fields</a></li>
                                        <li><a class="dropdown-item" href="javascript:void(0)" @onclick="NavigateToCrops">Manage Crops</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-danger" href="javascript:void(0)" @onclick="ShowDeleteConfirmation">Delete Farm</a></li>
                                    </ul>
                                </div>
                            </FarmPermission>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Farm Content Tabs -->
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <ul class="nav nav-tabs nav-tabs-primary" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link @(activeTab == "overview" ? "active" : "")" 
                               @onclick='() => SetActiveTab("overview")' 
                               href="javascript:void(0)">
                                Overview
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(activeTab == "fields" ? "active" : "")" 
                               @onclick='() => SetActiveTab("fields")' 
                               href="javascript:void(0)">
                                Fields
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(activeTab == "crops" ? "active" : "")" 
                               @onclick='() => SetActiveTab("crops")' 
                               href="javascript:void(0)">
                                Crops
                            </a>
                        </li>
                        <!-- Only show to users with tillage permission -->
                        <FarmPermission Permission="Tillage.View" FarmId="@FarmId">
                            <li class="nav-item">
                                <a class="nav-link @(activeTab == "tillage" ? "active" : "")" 
                                   @onclick='() => SetActiveTab("tillage")' 
                                   href="javascript:void(0)">
                                    Tillage
                                </a>
                            </li>
                        </FarmPermission>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content">
                        <!-- Overview Tab -->
                        <div class="tab-pane fade @(activeTab == "overview" ? "show active" : "")" id="overview" role="tabpanel">
                            <div class="row">
                                <div class="col-md-6">
                                    <h5>Farm Details</h5>
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <tbody>
                                                <tr>
                                                    <th width="150">Contact Person</th>
                                                    <td>@farm.ContactPerson</td>
                                                </tr>
                                                <tr>
                                                    <th>Phone</th>
                                                    <td>@farm.PhoneNumber</td>
                                                </tr>
                                                <tr>
                                                    <th>Email</th>
                                                    <td>@farm.Email</td>
                                                </tr>
                                                <tr>
                                                    <th>Website</th>
                                                    <td>@(string.IsNullOrEmpty(farm.Website) ? "N/A" : farm.Website)</td>
                                                </tr>
                                                <tr>
                                                    <th>Established</th>
                                                    <td>@farm.Year</td>
                                                </tr>
                                                <tr>
                                                    <th>Location</th>
                                                    <td>@farm.Province, @farm.District</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h5>Land Information</h5>
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <tbody>
                                                <tr>
                                                    <th width="150">Total Size</th>
                                                    <td>@farm.Size hectares</td>
                                                </tr>
                                                <tr>
                                                    <th>Arable Land</th>
                                                    <td>@farm.Arable hectares</td>
                                                </tr>
                                                <tr>
                                                    <th>Cleared Land</th>
                                                    <td>@farm.Cleared hectares</td>
                                                </tr>
                                                <tr>
                                                    <th>Soil Type</th>
                                                    <td>@farm.SoilType</td>
                                                </tr>
                                                <tr>
                                                    <th>Terrain</th>
                                                    <td>@(farm.Terrain?.ToString() ?? "N/A")</td>
                                                </tr>
                                                <tr>
                                                    <th>Water Source</th>
                                                    <td>@(string.IsNullOrEmpty(farm.WaterSource) ? "N/A" : farm.WaterSource)</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Additional sections for Overview tab -->
                            @if (!string.IsNullOrEmpty(farm.Description))
                            {
                                <div class="row mt-4">
                                    <div class="col-12">
                                        <h5>Description</h5>
                                        <p>@farm.Description</p>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <!-- Fields Tab -->
                        <div class="tab-pane fade @(activeTab == "fields" ? "show active" : "")" id="fields" role="tabpanel">
                            @if (fields == null || !fields.Any())
                            {
                                <div class="alert alert-info">
                                    <p>No fields have been added to this farm yet.</p>
                                    
                                    <FarmPermission FarmId="@FarmId" RequireManage="true">
                                        <button class="btn btn-sm btn-primary mt-2" @onclick="NavigateToAddField">
                                            <i class="fas fa-plus me-1"></i> Add Field
                                        </button>
                                    </FarmPermission>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5 class="mb-0">Fields (@fields.Count)</h5>
                                    
                                    <FarmPermission FarmId="@FarmId" RequireManage="true">
                                        <button class="btn btn-sm btn-primary" @onclick="NavigateToAddField">
                                            <i class="fas fa-plus me-1"></i> Add Field
                                        </button>
                                    </FarmPermission>
                                </div>
                                
                                <div class="table-responsive">
                                    <table class="table align-items-center mb-0">
                                        <thead>
                                            <tr>
                                                <th class="text-uppercase text-xxs font-weight-bolder opacity-7">Name</th>
                                                <th class="text-uppercase text-xxs font-weight-bolder opacity-7 ps-2">Size (ha)</th>
                                                <th class="text-uppercase text-xxs font-weight-bolder opacity-7 ps-2">Soil Type</th>
                                                <th class="text-uppercase text-xxs font-weight-bolder opacity-7 ps-2">Irrigation</th>
                                                <th class="text-uppercase text-xxs font-weight-bolder opacity-7 ps-2">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var field in fields)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="d-flex px-2 py-1">
                                                            <div class="d-flex flex-column justify-content-center">
                                                                <h6 class="mb-0 text-sm">@field.Name</h6>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <p class="text-xs font-weight-bold mb-0">@field.Size</p>
                                                    </td>
                                                    <td>
                                                        <p class="text-xs font-weight-bold mb-0">@field.SoilType</p>
                                                    </td>
                                                    <td>
                                                        <span class="badge badge-sm bg-@(field.Irrigation ? "success" : "secondary")">
                                                            @(field.Irrigation ? "Yes" : "No")
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex">
                                                            <a href="javascript:void(0)" @onclick="() => NavigateToFieldDetails(field.Id)" class="btn btn-link text-dark px-2 mb-0">
                                                                <i class="fas fa-eye text-sm"></i>
                                                            </a>
                                                            
                                                            <FarmPermission FarmId="@FarmId" RequireManage="true">
                                                                <a href="javascript:void(0)" @onclick="() => NavigateToEditField(field.Id)" class="btn btn-link text-primary px-2 mb-0">
                                                                    <i class="fas fa-pencil-alt text-sm"></i>
                                                                </a>
                                                                <button @onclick="() => DeleteField(field.Id)" class="btn btn-link text-danger px-2 mb-0">
                                                                    <i class="fas fa-trash text-sm"></i>
                                                                </button>
                                                            </FarmPermission>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </div>
                        
                        <!-- Crops Tab -->
                        <div class="tab-pane fade @(activeTab == "crops" ? "show active" : "")" id="crops" role="tabpanel">
                            <!-- Crops content here -->
                            <p>Crop data and visualization will be displayed here.</p>
                        </div>
                        
                        <!-- Tillage Tab -->
                        <div class="tab-pane fade @(activeTab == "tillage" ? "show active" : "")" id="tillage" role="tabpanel">
                            <!-- Tillage content here -->
                            <p>Tillage programs and services will be displayed here.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Delete Confirmation Modal -->
<SfDialog @bind-Visible="isDeleteModalVisible" Width="400px" IsModal="true" ShowCloseIcon="true">
    <DialogTemplates>
        <Header>Confirm Delete</Header>
        <Content>
            <div>
                <p>Are you sure you want to delete this farm?</p>
                <div class="alert alert-danger">
                    <p>This action will permanently delete the farm and all its associated data including fields, crops, and tillage programs. This action cannot be undone.</p>
                </div>
                
                <div class="d-flex justify-content-end mt-4">
                    <button type="button" class="btn btn-secondary me-2" @onclick="() => isDeleteModalVisible = false">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDeleteFarm">
                        <i class="fas fa-trash me-1"></i> Delete Farm
                    </button>
                </div>
            </div>
        </Content>
    </DialogTemplates>
</SfDialog>

@code {
    [Parameter]
    public string FarmId { get; set; }
    
    private FarmViewModel farm;
    private List<FieldViewModel> fields;
    private bool isLoading = true;
    private string activeTab = "overview";
    private Toast Alert;
    private bool isDeleteModalVisible = false;
    
    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }
    
    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            
            // Check if user has access to this farm
            bool canAccess = await FarmAccessService.CanAccessFarm(FarmId);
            if (!canAccess)
            {
                // No access - set farm to null to show the error
                farm = null;
                isLoading = false;
                return;
            }
            
            // Load farm details
            var farmResponse = await ApiCall.Get<ApiResponse<FarmViewModel>>(
                await ApiCall.GetHttpClient(), $"farms/getfarm/{FarmId}");
                
            if (farmResponse?.Status == 200 && farmResponse.Result != null)
            {
                farm = farmResponse.Result;
                
                // Load fields
                var fieldsResponse = await ApiCall.Get<ApiResponse<List<FieldViewModel>>>(
                    await ApiCall.GetHttpClient(), $"fields/getfarmfields/{FarmId}");
                    
                if (fieldsResponse?.Status == 200 && fieldsResponse.Result != null)
                {
                    fields = fieldsResponse.Result;
                }
            }
            else
            {
                // Farm not found or error loading
                farm = null;
            }
        }
        catch (Exception ex)
        {
            Alert?.Show($"Error loading farm: {ex.Message}", showTitle: true, toastType: ToastType.Danger);
            farm = null;
        }
        finally
        {
            isLoading = false;
        }
    }
    
    private void SetActiveTab(string tab)
    {
        activeTab = tab;
    }
    
    private void ShowDeleteConfirmation()
    {
        isDeleteModalVisible = true;
    }
    
    private async Task ConfirmDeleteFarm()
    {
        try
        {
            var response = await ApiCall.Remove<ApiResponse<FarmViewModel>>(
                await ApiCall.GetHttpClient(), $"farms/deletefarm/", FarmId);
                
            if (response?.Status == 200)
            {
                Alert?.Show("Farm deleted successfully", showTitle: true, toastType: ToastType.Success);
                isDeleteModalVisible = false;
                NavigateToFarms();
            }
            else
            {
                Alert?.Show(response?.Title ?? "Error deleting farm", showTitle: true, toastType: ToastType.Danger);
            }
        }
        catch (Exception ex)
        {
            Alert?.Show($"Error: {ex.Message}", showTitle: true, toastType: ToastType.Danger);
        }
    }
    
    private async Task DeleteField(string fieldId)
    {
        try
        {
            var response = await ApiCall.Remove<ApiResponse<FieldViewModel>>(
                await ApiCall.GetHttpClient(), $"fields/deletefield/", fieldId);
                
            if (response?.Status == 200)
            {
                Alert?.Show("Field deleted successfully", showTitle: true, toastType: ToastType.Success);
                await LoadData(); // Refresh the fields
            }
            else
            {
                Alert?.Show(response?.Title ?? "Error deleting field", showTitle: true, toastType: ToastType.Danger);
            }
        }
        catch (Exception ex)
        {
            Alert?.Show($"Error: {ex.Message}", showTitle: true, toastType: ToastType.Danger);
        }
    }
    
    #region Navigation Methods
    
    private void NavigateToEdit()
    {
        NavigationManager.NavigateTo($"/farms/{FarmId}/edit");
    }
    
    private void NavigateToUsers()
    {
        NavigationManager.NavigateTo($"/farms/{FarmId}/users");
    }
    
    private void NavigateToFields()
    {
        NavigationManager.NavigateTo($"/farms/{FarmId}/fields");
    }
    
    private void NavigateToCrops()
    {
        NavigationManager.NavigateTo($"/farms/{FarmId}/crops");
    }
    
    private void NavigateToAddField()
    {
        NavigationManager.NavigateTo($"/farms/{FarmId}/fields/add");
    }
    
    private void NavigateToFieldDetails(string fieldId)
    {
        NavigationManager.NavigateTo($"/farms/{FarmId}/fields/{fieldId}");
    }
    
    private void NavigateToEditField(string fieldId)
    {
        NavigationManager.NavigateTo($"/farms/{FarmId}/fields/{fieldId}/edit");
    }
    
    private void NavigateToFarms()
    {
        NavigationManager.NavigateTo("/farms");
    }
    
    private void NavigateToDashboard()
    {
        NavigationManager.NavigateTo("/");
    }
    
    #endregion
}