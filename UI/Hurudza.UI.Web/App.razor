@using Hurudza.UI.Web.Cookie.Providers
@inject IApiCall ApiCall
@inject ILocalStorageService LocalStorageService;
@inject AuthenticationStateProvider AuthStateProvider

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly" OnNavigateAsync="@OnNavigateAsync">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        <RedirectToLogin/>
                    }
                    else
                    {
                        <p role="alert">You are not authorized to access this resource.</p>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code{
    private async Task OnNavigateAsync(NavigationContext args)
    {
        try
        {
            // 1. First check if we have a token in local storage
            var token = await LocalStorageService.GetItemAsync<string>("token");

            if (string.IsNullOrEmpty(token))
            {
                // No token found, no need to attempt authentication
                return;
            }

            // 2. Check if user is already authenticated via AuthStateProvider
            var authState = await (AuthStateProvider as CustomAuthStateProvider).GetAuthenticationStateAsync();
            var isAuthenticated = authState.User.Identity?.IsAuthenticated ?? false;

            if (!isAuthenticated)
            {
                // 3. We have a token but user isn't authenticated, so get the profile
                var client = await ApiCall.GetHttpClient(); // This should attach the token

                // Add logging to debug request headers (temporarily)
                Console.WriteLine($"Authorization header present: {client.DefaultRequestHeaders.Contains("Authorization")}");
                if (client.DefaultRequestHeaders.Contains("Authorization"))
                {
                    Console.WriteLine($"Auth header value: {client.DefaultRequestHeaders.GetValues("Authorization").FirstOrDefault()}");
                }

                var response = await ApiCall.Get<ApiResponse<UserViewModel>>(client, "authentication/getloggedinprofile/");

                if (response != null && response.Status == (int)HttpStatusCode.OK && response.Result != null)
                {
                    // Valid response with user profile, update auth state
                    (AuthStateProvider as CustomAuthStateProvider)?.SetAuthInfo(response.Result);
                    Console.WriteLine($"Successfully authenticated user: {response.Result.Fullname}");
                }
                else
                {
                    // Invalid or expired token, remove it
                    Console.WriteLine("Failed to authenticate with stored token, removing it");
                    await LocalStorageService.RemoveItemAsync("token");
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error in authentication flow: {ex.Message}");
            // Consider removing the token if it's causing errors
            await LocalStorageService.RemoveItemAsync("token");
        }
    }

}