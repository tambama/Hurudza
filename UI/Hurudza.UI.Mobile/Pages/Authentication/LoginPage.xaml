             xmlns:local="clr-namespace:Hurudza.UI.Mobile"
             xmlns:pages="clr-namespace:Hurudza.UI.Mobile.Pages.Authentication"
             x:Class="Hurudza.UI.Mobile.Pages.Authentication.LoginPage">
    
    <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type pages:Login}" />
